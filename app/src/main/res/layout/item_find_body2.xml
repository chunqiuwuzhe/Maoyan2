<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_find_body_header" />
    <include layout="@layout/item_find_body_header2" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_find8_iv01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:layout_marginRight="2dp"
            android:src="@drawable/rv" />
        <ImageView
            android:id="@+id/iv_find8_iv02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/rv" />
        <ImageView
            android:id="@+id/iv_find8_iv03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/rv" />


    </LinearLayout>

    <include layout="@layout/item_find_body_foot" />
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:background="#55222222"
        android:layout_height="1px"/>

</LinearLayout>