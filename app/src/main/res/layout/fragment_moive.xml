<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#DD403B"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_moive_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ui"
            android:drawablePadding="3dp"
            android:text="北京"
            android:layout_marginTop="7dp"
            android:paddingLeft="8dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/ll_moive_bai"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tettle_sliding_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_red_point"
                android:layout_width="50dp"
                android:layout_height="33dp"

                android:background="@drawable/red_point" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_moive_zi"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="热映"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待映"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="海外"
                android:textColor="#ffffff" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_moive_da"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>