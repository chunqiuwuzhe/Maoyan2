<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_find_body_header" />
    <include layout="@layout/item_find_body_header2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_find8_iv01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/rv" />

        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_find8_iv02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/rv" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_find8_iv03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/rv" />

                <TextView
                    android:id="@+id/tv_find8_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#77444444"
                    android:padding="3dp"
                    android:text="10å¼ " />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/item_find_body_foot" />
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:background="#55222222"
        android:layout_height="1px"/>
</LinearLayout>